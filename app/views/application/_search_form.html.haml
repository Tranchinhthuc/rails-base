= search_form_for @q, url: posts_path, html: { method: :get, class: 'search-form form-inline',
  style: 'margin-bottom: 20px' } do |f|
  .form-group
    = f.search_field 'content_cont_any', {class: 'form-control', style: 'width: 330px'}
  .form-group
    = button_tag(type: "submit", class: "btn btn-default") do
      %i.fa.fa-search{"aria-hidden"=> true}
