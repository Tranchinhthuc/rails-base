#post-form-modal.modal.fade{:role => "dialog"}
  .modal-dialog.modal-lg
    / Modal content
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"} Ã—
        %h4.modal-title Create post
      .modal-body
        .col-sm-12.post-form
          = simple_form_for(Post.new, html: {class: 'form-horizontal'}) do |f|
            = render 'posts/form', f: f
            .form-group
              .col-sm-12
                = f.submit "Submit", class: 'btn btn-primary'
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
